# <summary>User Interface Domain</summary>

########################################
## <summary>
##	Allow the specified domain to
##	send data to the UIVM via v4v.
## </summary>
## <param name="type">
##	<summary>
##	Type of the domain allowe access.
##	</summary>
## </param>
#
interface(`uivm_send_v4v',`
	gen_require(`
		type uivm_t;
	')

	allow $1 self:v4v use;
	allow $1 uivm_t:v4v send;
')

########################################
## <summary>
##	Allow the specified type to map write uivm grants.
## </summary>
## <param name="type">
##	<summary>
##	Type of the domain allowed access.
##	</summary>
## </param>
#
interface(`uivm_map_write_grant',`
	gen_require(`
		type uivm_t;
	')

	allow $1 uivm_t:grant map_write;
')
########################################
## <summary>
##	Allow the specified type to set uivm gnttab limits.
## </summary>
## <param name="type">
##	<summary>
##	Type of the domain allowed access.
##	</summary>
## </param>
#
interface(`uivm_set_gnttab_limits',`
	gen_require(`
		type uivm_t;
	')

	allow $1 uivm_t:domain2 set_gnttab_limits;
')
